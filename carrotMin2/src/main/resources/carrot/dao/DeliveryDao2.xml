<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- <sql> 태그 사용하기
=> 자주 사용되는 SQL문은 별도로 정의해두고 포함한다.
-->

<mapper namespace="carrot.dao.DeliveryDao2">

  <!-- 객체의 컬럼과 프로퍼티를 연결한다. -->

  <!-- 객체의 컬럼과 프로퍼티를 연결한다. -->
  <resultMap type="Delivery2" id="deliveryMap2">
    <!-- PK 컬럼은 id 태그를 사용하여 지정한다. -->
    <id column="GNO" property="gno"/>
	<result column="GNAME" property="gname"/>
    <result column="GCAT" property="gcat"/>
    <result column="GUNIT" property="gunit"/>
    <result column="OQTY" property="oqty"/>
    <result column="DDATE" property="oddate"/>
    <result column="RDATE" property="ordate"/>
  </resultMap>
 

  <sql id="deliverySelect2">
SELECT G.GNAME, G.GCAT, G.GUNIT, O.OQTY, O.DDATE, O.RDATE 
FROM GOODS G, ORDERLIST O, SUPPLIER S, MATCHING M
WHERE S.SNO = G.SNO
AND  G.GNO = O.GNO AND G.SNO = O.SNO
AND O.SNO = M.SNO AND M.CNO = S.SNO
GROUP BY G.GNO
    
  </sql>
  
  
	<select id="selectList2" parameterType="map" resultMap="deliveryMap2">
		<include refid="deliverySelect2" />
			<if test="pageSize > 0">
				limit #{startIndex}, #{pageSize}
			</if>
	</select>
  
<!--   
  <select id="selectList" parameterType="map" 
        resultMap="goodsMap">
    <include refid="goodsSelect"/> 
    <if test="pageSize > 0">
      limit #{startIndex}, #{pageSize}
    </if>
  </select>
   -->
  <select id="selectOne" parameterType="int" resultMap="deliveryMap2">
    <include refid="deliverySelect2"/> 
    WHERE GNO=#{value}
  </select>
  
  
  <select id="totalSize" resultType="int">
    SELECT count(GNO) FROM GOODS
  </select>
 
  <insert id="insert" parameterType="Delivery"
    useGeneratedKeys="true" keyColumn="GNO" keyProperty="no">
    INSERT INTO DELIVERY(CNAME, MLEVEL, DDATE, TOT_PRICE, TOT_MONTH) 
    VALUES (#{dname},#{dgrade},#{ddate},#{datesum},#{monthsum})
  </insert>
  
  <update id="update" parameterType="Delivery">
    UPDATE GOODS SET 
	    SNO=#{supplierNo},
      GCODE=#{code},
      GNAME=#{name},
      GUNIT=#{unit},
      GCAT=#{category},
      GMEMO=#{note},
      GPRICE_A=#{priceA},
      GPRICE_B=#{priceB},
      GPRICE_C=#{priceC},
      GIMG=#{url}
    WHERE GNO=#{no}
  </update>
  

  
  <delete id="delete" parameterType="int">
    DELETE FROM CLIENT WHERE CNO=#{value}
  </delete> 
  
</mapper>



















